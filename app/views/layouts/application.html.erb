<!DOCTYPE html>
<html>
	<head>
		<title>MessageMe</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= favicon_link_tag %>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'btn_outline_animated', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= stylesheet_link_tag 'icon_sizes', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

		<%= stylesheet_link_tag 'notify-send', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'notify-send', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<%= flash_message_manager %>
		<%= render 'layouts/navbar' %>
		<div class="ui container">
			<%= yield %>
		</div>
	</body>
</html>
